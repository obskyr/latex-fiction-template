{
    "ltex.language": "en-US",

    "ltex.enabled": ["latex", "markdown_latex_combined"],
    "ltex.diagnosticSeverity": "hint",

    "files.associations": {
        "*.cfg": "latex"
    },
    
    "latex-workshop.latex.recipe.default": "Make PDF",
    "latex-workshop.latex.outDir": "%WORKSPACE_FOLDER%/build/%RELATIVE_DIR%/",
    "latex-workshop.latex.search.rootFiles.exclude": [
        "/code/**/*",
        "/customization/**/*"
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "Make PDF",
            "tools": [
                "latexmk (lualatex)",
                "Move PDF"
            ]
        },
        {
            "name": "Make EPUB",
            "tools": [
                "tex4ebook",
                "Move EPUB"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk (lualatex)",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-lualatex",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {
                "TEXMF_OUTPUT_DIRECTORY": "%OUTDIR%"
            }
        },
        {
            "name": "tex4ebook",
            "command": "tex4ebook",
            "args": [
                "--lua",
                "--config", "%WORKSPACE_FOLDER%/customization/xhtml.cfg",
                "--build-dir", "%OUTDIR%",
                "--output-dir", "%OUTDIR%",
                "--format", "epub",
                "%DOC%"
            ],
            "env": {
                "TEXMF_OUTPUT_DIRECTORY": "%OUTDIR%"
            }
        },
        {
            "name": "Move PDF",
            "command": "mv",
            "args": [
                "%OUTDIR%/%DOCFILE%.pdf",
                "%WORKSPACE_FOLDER%/%RELATIVE_DIR%/"
            ]
        },
        {
            "name": "Move EPUB",
            "command": "mv",
            "args": [
                "%OUTDIR%/%DOCFILE%.epub",
                "%WORKSPACE_FOLDER%/%RELATIVE_DIR%/"
            ]
        }
    ]
}
